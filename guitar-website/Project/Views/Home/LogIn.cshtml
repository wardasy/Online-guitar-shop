    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="blogs">
                    <div class="text-center">
                        <h2>Log in</h2>
                        <p>
                            Already member?<br>
                            Log in! <br>
                        </p>
                    </div>
                    <hr>
                </div>
            </div>
        </div>
    </div>

    <div style="width:10%; margin:0 auto;">

        @using (Html.BeginForm("Submit", "Home", FormMethod.Post))
        {
            <br />
            <i>Email: </i> @Html.TextBoxFor(m => m.email) @Html.ValidationMessageFor(x => x.email)
            <br />
            <i>Password: </i> @Html.PasswordFor(m => m.password, new { id = "password", Textmode = "Password" }) @Html.ValidationMessageFor(x => x.password)
            <br />
            @Session["Error"]
            <br />
            <input id="Submit" type="submit" class="btn btn-primary btn-lg" required="required" value="submit" />
            <br />

        }

    </div>

    <footer>
        <div class="inner-footer">
            <div class="container">
                <div class="row">
                    <div class="col-md-4 f-about">
                        <a href="@Url.Action("ShowHomePage", "Home")"><h1>Home</h1></a>
