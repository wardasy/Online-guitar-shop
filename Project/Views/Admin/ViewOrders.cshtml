    <style type="text/css">
        .webgrid-table {
            font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

            .webgrid-table td, th {
                border: 1px solid #ddd;
                padding: 8px;
            }

             .webgrid-alternating-row{
                background-color: #f2f2f2;
                text-align: center;
            }

            .webgrid-row-style {
                background-color: #ddd;
                text-align: center;
            }

             .webgrid-header {
                color:white;
                padding-top: 12px;
                padding-bottom: 12px;
                text-align: center;
                background-color: #109173;
            }
    </style>
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="portfolios">
                    <div class="text-center">
                        <p>
                            <h2>Orders List:</h2>

                            <div>
                                <br />
                                @{ 
                                    WebGrid obj = new WebGrid(Model.Orders);
                                }
                                @obj.GetHtml(
                               tableStyle: "webgrid-table",
                                headerStyle: "webgrid-header",
                                footerStyle: "webgrid-footer",
                                alternatingRowStyle: "webgrid-alternating-row",
                                selectedRowStyle: "webgrid-selected-row",
                                rowStyle: "webgrid-row-style",
                                mode: WebGridPagerModes.All );
                            </div>
                        </p>
                    </div>
                    <hr>
                </div>
            </div>
        </div>
    </div>

    <div align="center">

        @using (Html.BeginForm("updateOrder", "Admin", FormMethod.Post))
            {
            @Session["Error"]
            <br />
                <p>Enter order ID that supplied</p>
                <i>Order ID: </i> @Html.TextBoxFor(m => m.order.oid)  @Html.ValidationMessageFor(x => x.order.oid)
                <br />
                <input id="Submit" type="submit" class="btn btn-primary btn-lg" required="required" value="Submit" />
                <br />
        }
    </div>

